<?xml version="1.0"
    encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:background="@color/white"
        android:paddingLeft="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView android:textColor="@color/select_tab_report"
            android:gravity="center_vertical"
            android:id="@+id/txtDateValue"
            android:layout_width="wrap_content"
            android:layout_height="50.0dip"
            android:layout_alignParentLeft="true"
            style="@style/TextHeader"
            />
        <TextView android:textColor="@color/select_tab_report"
            android:gravity="center"
            android:id="@+id/txtToDay"
            android:background="@drawable/selector_button_back"
            android:clickable="true"
            android:layout_width="100.0dip"
            android:layout_height="50.0dip"
            android:text="@string/Today"
            android:layout_alignParentRight="true"
            style="@style/TextHeader"
            />
        <TextView android:textColor="@color/select_tab_report"
            android:gravity="center"
            android:id="@+id/txtNow"
            android:background="@drawable/selector_button_back"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="100.0dip"
            android:layout_height="50.0dip"
            android:text="@string/current_time"
            android:layout_alignParentRight="true"
            style="@style/TextHeader"
            />
    </RelativeLayout>
    <View android:background="@color/background_from"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        />
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip">
        <TextView android:gravity="center"
            android:id="@+id/text_view_date"
            android:background="@drawable/selector_button_back"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="@string/Date"
            android:layout_weight="1.0"
            style="@style/LbStyleBlack15"
            />
        <View android:background="@color/background_from"
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            />
        <TextView android:gravity="center"
            android:id="@+id/txtTime"
            android:background="@drawable/selector_button_back"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="@string/Time"
            android:layout_weight="1.0"
            style="@style/LbStyleBlack15"
            />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="3.0dip">
        <View android:id="@+id/vDate"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            />
        <View android:background="@color/background_from"
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            />
        <View android:id="@+id/vTime"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            />
    </LinearLayout>
    <View android:background="@color/background_from"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        />
    <LinearLayout android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="#ffffffff"
        android:paddingTop="10.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">
        <DatePicker android:layout_gravity="center"
            android:id="@+id/dpSelectDate"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:minHeight="70.0dip"
            android:layout_weight="1.0"
           android:datePickerMode="calendar"
            />
        <TimePicker android:layout_gravity="center"
            android:id="@+id/dpSelectTime"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:minHeight="70.0dip"
            android:layout_weight="1.0"
            />
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/lnYes"
        android:background="@drawable/selector_button_back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <View android:background="@color/background_from"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            />
        <TextView android:gravity="center"
            android:layout_width="80.0dip"
            android:layout_height="30.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="10.0dip"
            android:text="@string/Agree"
            style="@style/LbStyleBlack15"
            />
    </LinearLayout>
</LinearLayout>