<?xml version="1.0"
    encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:background="@color/background_from"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal"
                android:id="@+id/lnHead"
                android:background="@color/background_register_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">
                <ImageView android:id="@+id/button_back"
                    android:background="@drawable/selector_button_back"
                    android:padding="10.0dip"
                    android:clickable="false"
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:src="@drawable/back_button"
                    android:contentDescription="@string/no_image"
                    />
                <TextView android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/txtCurrency"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="50.0dip"
                    android:text="@string/ResetDataConfirm"
                    android:layout_weight="1.0"
                    style="@style/TextHeader"
                    />
            </LinearLayout>
        </ScrollView>

        <ScrollView android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_from">



                <TextView android:gravity="center_horizontal"
                    android:id="@+id/txtConfirmNote"
                    android:padding="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ResetDataConfirmPasswordNote"
                    style="@style/ReportNormal"
                    />

                <LinearLayout android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_edit_money"
                    android:padding="1.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:minHeight="50.0dip">
                    <EditText android:id="@+id/txtConfirmPassWord"
                        android:background="@color/white"
                        android:paddingLeft="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:inputType="textPassword"
                        />
                </LinearLayout>

                <LinearLayout android:gravity="center"
                    android:id="@+id/lnConfirm"
                    android:background="@drawable/selector_button_green"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="30.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginBottom="20.0dip">
                    <TextView android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ResetDataConfirm"
                        style="@style/text_view_style"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>