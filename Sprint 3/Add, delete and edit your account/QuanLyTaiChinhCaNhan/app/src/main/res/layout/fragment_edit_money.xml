<?xml version="1.0"
    encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/white"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:background="@color/background_register_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false" >

        <ImageView
            android:id="@+id/image_view_back"
            android:background="@drawable/selector_button_back"
            android:padding="10.0dip"
            android:clickable="false"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:src="@drawable/back_button"
            android:contentDescription="@string/no_image" />

        <TextView
            style="@style/TextHeader"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/text_view_personal"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="50.0dip"
            android:text="@string/EditMoney"
            android:layout_weight="1.0" />
    </LinearLayout>

    <LinearLayout android:gravity="center|right"
        android:background="@color/background_from"
        android:layout_width="fill_parent"
        android:layout_height="150.0dip">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewMoney" />
    </LinearLayout>
    <LinearLayout android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginTop="3.0dip"
        android:layout_weight="1.0">
        <LinearLayout android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginBottom="4.0dip"
            android:layout_weight="1.0">
            <Button android:id="@+id/btnKeyC"
                android:background="@drawable/selector_button_orange"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="4.0dip"
                android:text="C"
                android:layout_weight="1.0"
                style="@style/KeyPassCode"/>
            <Button android:id="@+id/btnKeyDivide"
                android:background="@drawable/selector_button_keyboard"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="4.0dip"
                android:text="/"
                android:layout_weight="1.0"
                style="@style/KeyPassCode"/>
            <Button android:id="@+id/btnKeyMulti"
                android:background="@drawable/selector_button_keyboard"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="4.0dip"
                android:text="X"
                android:layout_weight="1.0"
                style="@style/KeyPassCode"/>
            <ImageButton android:id="@+id/btnKeyBack"
                android:background="@drawable/selector_button_keyboard"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_action_backspace"
                android:layout_weight="1.0"
                android:contentDescription="@string/no_image"/>
        </LinearLayout>
        <LinearLayout android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginBottom="4.0dip"
            android:layout_weight="1.0">
            <Button android:id="@+id/btnKey7"
                android:background="@drawable/selector_button_number"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="4.0dip"
                android:text="7"
                android:layout_weight="1.0"
                style="@style/KeyPassCode"/>
            <Button android:id="@+id/btnKey8"
                android:background="@drawable/selector_button_number"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="4.0dip"
                android:text="8"
                android:layout_weight="1.0"
                style="@style/KeyPassCode"
                />
            <Button android:id="@+id/btnKey9"
                android:background="@drawable/selector_button_number"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="4.0dip"
                android:text="9"
                android:layout_weight="1.0"
                style="@style/KeyPassCode"/>
            <Button android:id="@+id/btnKeyMinus"
                android:background="@drawable/selector_button_keyboard"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="-"
                android:layout_weight="1.0"
                style="@style/KeyPassCode"/>
        </LinearLayout>
        <LinearLayout android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginBottom="4.0dip"
            android:layout_weight="1.0">
            <Button android:id="@+id/btnKey4"
                android:background="@drawable/selector_button_number"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="4.0dip"
                android:text="4"
                android:layout_weight="1.0"
                style="@style/KeyPassCode"/>
            <Button android:id="@+id/btnKey5"
                android:background="@drawable/selector_button_number"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="4.0dip"
                android:text="5"
                android:layout_weight="1.0"
                style="@style/KeyPassCode"/>
            <Button android:id="@+id/btnKey6"
                android:background="@drawable/selector_button_number"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="4.0dip"
                android:text="6"
                android:layout_weight="1.0"
                style="@style/KeyPassCode"/>
            <Button android:id="@+id/btnKeyAdd"
                android:background="@drawable/selector_button_keyboard"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="+"
                android:layout_weight="1.0"
                style="@style/KeyPassCode"/>
        </LinearLayout>
        <LinearLayout android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginBottom="4.0dip"
            android:layout_weight="1.0">
            <Button android:id="@+id/btnKey1"
                android:background="@drawable/selector_button_number"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="4.0dip"
                android:text="1"
                android:layout_weight="1.0"
                style="@style/KeyPassCode"/>
            <Button android:id="@+id/btnKey2"
                android:background="@drawable/selector_button_number"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="4.0dip"
                android:text="2"
                android:layout_weight="1.0"
                style="@style/KeyPassCode"/>
            <Button android:id="@+id/btnKey3"
                android:background="@drawable/selector_button_number"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="4.0dip"
                android:text="3"
                android:layout_weight="1.0"
                style="@style/KeyPassCode"/>
            <Button android:id="@+id/btnKeyNegative"
                android:background="@drawable/selector_button_keyboard"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="="
                android:layout_weight="1.0"
                style="@style/KeyPassCode"/>
        </LinearLayout>
        <LinearLayout android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginBottom="4.0dip"
            android:layout_weight="1.0">
            <Button android:id="@+id/btnKey0"
                android:background="@drawable/selector_button_number"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="4.0dip"
                android:text="0"
                android:layout_weight="1.0"
                style="@style/KeyPassCode"/>
            <Button android:id="@+id/btnKey000"
                android:background="@drawable/selector_button_number"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="4.0dip"
                android:text="000"
                android:layout_weight="1.0"
                style="@style/KeyPassCode"/>
            <Button android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/btnKeyD"
                android:background="@drawable/selector_button_number"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="4.0dip"
                android:layout_weight="1.0"
                style="@style/KeyPassCode"
                android:text="," />
            <Button android:id="@+id/btnKeyEqual"
                android:background="@drawable/selector_button_green"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                style="@style/TextHeader"
            android:text="Xong" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>