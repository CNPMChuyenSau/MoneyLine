<?xml version="1.0"
    encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/background_from"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout android:orientation="horizontal"
            android:background="@color/BarHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout android:gravity="center"
                android:id="@+id/lnBack"
                android:background="@drawable/selector_button_back"
                android:paddingRight="10.0dip"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:baselineAligned="false"
                android:layout_alignParentLeft="true">
                <ImageView android:padding="10.0dip"
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:id="@+id/button_back"
                    android:src="@drawable/back_button"
                    android:contentDescription="@string/ContentDescriptionImageNull"
                    />
            </LinearLayout>
            <TextView android:id="@+id/txtTermHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saving_term_type"
                android:layout_centerInParent="true"
                style="@style/TextHeader"
                />
            <Button android:textColor="@color/white"
                android:id="@+id/btnDone"
                android:background="@drawable/selector_button_save_gray"
                android:visibility="gone"
                android:layout_width="50.0dip"
                android:layout_height="30.0dip"
                android:layout_marginRight="10.0dip"
                android:text="@string/Done"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/TextHeaderAction"
                />
        </RelativeLayout>
    </ScrollView>

    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal"
                android:id="@+id/lnOneMonth"
                android:background="@drawable/selector_list_view_one"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip">
                <TextView android:layout_gravity="center_vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:text="@string/SavingTermTypeOneMonth"
                    android:layout_weight="1.0"
                    style="@style/ReportNormal"
                    />
                <ImageView android:id="@+id/imgOneMonth"
                    android:visibility="gone"
                    android:layout_width="32.0dip"
                    android:layout_height="32.0dip"
                    android:layout_margin="6.0dip"
                    android:src="@drawable/check_enable"
                    android:contentDescription="@string/no_image"
                    />
            </LinearLayout>
            <View android:background="@color/Line"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                />
            <LinearLayout android:orientation="horizontal"
                android:id="@+id/lnThreeMonth"
                android:background="@drawable/selector_list_view_one"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip">
                <TextView android:layout_gravity="center_vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:text="@string/SavingTermTypeThreeMonth"
                    android:layout_weight="1.0"
                    style="@style/ReportNormal"
                    />
                <ImageView android:id="@+id/imgThreeMonth"
                    android:visibility="gone"
                    android:layout_width="32.0dip"
                    android:layout_height="32.0dip"
                    android:layout_margin="6.0dip"
                    android:src="@drawable/check_enable"
                    android:contentDescription="@string/no_image"
                    />
            </LinearLayout>
            <View android:background="@color/Line"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                />
            <LinearLayout android:orientation="horizontal"
                android:id="@+id/lnSixMonth"
                android:background="@drawable/selector_list_view_one"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip">
                <TextView android:layout_gravity="center_vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:text="@string/SavingTermTypeSixMonth"
                    android:layout_weight="1.0"
                    style="@style/ReportNormal"
                    />
                <ImageView android:id="@+id/imgSixMonth"
                    android:visibility="gone"
                    android:layout_width="32.0dip"
                    android:layout_height="32.0dip"
                    android:layout_margin="6.0dip"
                    android:src="@drawable/check_enable"
                    android:contentDescription="@string/no_image"
                    />
            </LinearLayout>
            <View android:background="@color/Line"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                />
            <LinearLayout android:orientation="horizontal"
                android:id="@+id/lnTwelveMonth"
                android:background="@drawable/selector_list_view_one"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip">
                <TextView android:layout_gravity="center_vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:text="@string/SavingTermTypeTwelveMonth"
                    android:layout_weight="1.0"
                    style="@style/ReportNormal"
                    />
                <ImageView android:id="@+id/imgTwelveMonth"
                    android:visibility="gone"
                    android:layout_width="32.0dip"
                    android:layout_height="32.0dip"
                    android:layout_margin="6.0dip"
                    android:src="@drawable/check_enable"
                    android:contentDescription="@string/no_image"
                    />
            </LinearLayout>
            <View android:background="@color/Line"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                />
            <LinearLayout android:orientation="horizontal"
                android:id="@+id/ln24Month"
                android:background="@drawable/selector_list_view_one"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip">
                <TextView android:layout_gravity="center_vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:text="@string/ln24Month"
                    android:layout_weight="1.0"
                    style="@style/ReportNormal"
                    />
                <ImageView android:id="@+id/img24Month"
                    android:visibility="gone"
                    android:layout_width="32.0dip"
                    android:layout_height="32.0dip"
                    android:layout_margin="6.0dip"
                    android:src="@drawable/check_enable"
                    android:contentDescription="@string/no_image"
                    />
            </LinearLayout>
            <View android:background="@color/Line"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                />


            <View android:background="@color/Line"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                />
            <LinearLayout android:orientation="horizontal"
                android:id="@+id/lnOther"
                android:background="@drawable/selector_list_view_one"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip">
                <TextView android:layout_gravity="center_vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:text="@string/SavingTermTypeOther"
                    android:layout_weight="1.0"
                    style="@style/ReportNormal"
                    />
                <ImageView android:id="@+id/imgOther"
                    android:visibility="gone"
                    android:layout_width="32.0dip"
                    android:layout_height="32.0dip"
                    android:layout_margin="6.0dip"
                    android:src="@drawable/check_enable"
                    android:contentDescription="@string/no_image"
                    />
            </LinearLayout>
            <View android:background="@color/Line"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                />
            <LinearLayout android:orientation="horizontal"
                android:id="@+id/lnOtherValue"
                android:background="@drawable/selector_list_view_one"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip">
                <EditText android:gravity="center|right"
                    android:id="@+id/txtOtherValue"
                    android:background="@color/white"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="3.0dip"
                    android:maxLength="3"
                    android:layout_weight="1.0"
                    android:inputType="numberSigned"
                    android:imeOptions="actionDone"
                    style="@style/ReportNormal">
                    <requestFocus />
                </EditText>
                <TextView android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:text="@string/Months"
                    style="@style/ReportNormal"
                    />
            </LinearLayout>
            <View android:background="@color/Line"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>