<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <!--<include layout="@layout/toolbar_actionbar_button_search_bar"/>-->
    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/theme_background_color"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/fragmentMain"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>

        <LinearLayout
            android:id="@+id/fragmentDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/mmx_margin"
            android:background="?attr/shape_background_shadow"
            android:orientation="horizontal"
            android:padding="@dimen/mmx_padding"/>
    </LinearLayout>
</LinearLayout>