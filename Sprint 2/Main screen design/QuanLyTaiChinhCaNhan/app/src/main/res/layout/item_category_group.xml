<?xml version="1.0"
    encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/selector_listview_gray"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@+id/lnIndicator"
        android:clickable="true"
        android:layout_width="40.0dip"
        android:layout_height="50.0dip">
        <ImageView android:layout_gravity="center_vertical"
            android:id="@+id/imgIndicator"
            android:background="@drawable/selector_group_indicator"
            android:clickable="false"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_marginLeft="10.0dip"
            android:contentDescription="@string/NoImage"
            android:src="@drawable/group_expand" />
    </LinearLayout>
    <TextView android:gravity="center|left"
        android:id="@+id/header"
        android:layout_width="0.0dip"
        android:layout_height="50.0dip"
        android:layout_weight="1.0"
        style="@style/GroupExpandTitle"
        />
    <LinearLayout android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="5.0dip"
        android:background="@drawable/check"
        android:id="@+id/LinearLayoutchecked">

    </LinearLayout>
    <ImageView android:id="@+id/imgExpenseLock"
        android:visibility="gone"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_marginRight="20.0dip"
        android:src="@drawable/category_locked"
        android:contentDescription="@string/NoImage"
        />
</LinearLayout>