<?xml version="1.0"
    encoding="utf-8"?>
<RelativeLayout android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/selector_listview_one"
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_marginTop="13dp"
        android:layout_width="30dp"
        android:layout_marginLeft="14dp"
        android:textSize="18dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="31"
        android:id="@+id/textViewHomnay" />
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">
            <ImageView android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:src="@drawable/calendar"
                android:contentDescription="@string/ContentDescriptionImageNull"
                android:id="@+id/imageview_calendar" />
            <LinearLayout android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                >

                <TextView android:id="@+id/txtweekdays1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextViewCurrentAccountBlue"
                    android:text="Thứ sáu" />
                <TextView android:id="@+id/txtDate1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/FormEditTitle"
                    android:text="2016/12/12" />
            </LinearLayout>

            <LinearLayout
                android:gravity="right|center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtType"
                    android:layout_width="wrap_content"
                    android:gravity="center|left"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:text="Chi:xăng xe"
                    android:layout_marginRight="5.0dip"
                    style="@style/FormEditValue"
                    />
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.0"
                    android:gravity="right|center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="12000d"
                    android:textStyle="bold"

                    android:id="@+id/textViewMoney" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip">
            <TextView android:gravity="center|left"
                android:id="@+id/txtGhiChu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:singleLine="true"
                android:text="Chú thích ở đây"
                style="@style/TextViewStyleLableSmall"
                />
            <TextView android:gravity="center|right"
                android:id="@+id/txtAccountName"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:minWidth="100.0dip"
                android:singleLine="true"
                android:layout_weight="1.0"
                android:text="ví 02"
                style="@style/TransactionListViewItemNomal"
                />
            <ImageView android:layout_gravity="top"
                android:id="@+id/imgWallet"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:layout_marginLeft="5.0dip"
                android:src="@drawable/wallet"
                android:contentDescription="@string/NoImage"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>